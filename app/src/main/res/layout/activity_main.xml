<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnViewMedProfile"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@color/pink"
        android:drawableLeft="@drawable/ic_people_white_48dp"
        android:elevation="3dp"
        android:padding="20dp"
        android:text="View Medical Profile"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="8dp" />

    <Button
        android:id="@+id/btnViewMedicine"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginVertical="12dp"
        android:background="@color/yello"
        android:drawableLeft="@drawable/pills"
        android:elevation="3dp"
        android:padding="20dp"
        android:text="View Medicine"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btnViewMedProfile" />

    <Button
        android:id="@+id/btnSchedule"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginVertical="12dp"
        android:background="@color/blue"
        android:drawableLeft="@drawable/ic_schedule_white_48dp"
        android:elevation="3dp"
        android:padding="20dp"
        android:text="View Schedule"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btnViewMedicine" />

    <Button
        android:id="@+id/btnRecipe"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginVertical="12dp"
        android:background="@color/green"
        android:drawableLeft="@drawable/ic_schedule_white_48dp"
        android:elevation="3dp"
        android:padding="20dp"
        android:text="View Recipe"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btnSchedule" />

</android.support.constraint.ConstraintLayout>